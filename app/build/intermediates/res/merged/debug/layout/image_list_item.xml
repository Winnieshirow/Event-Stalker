<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:background="#CEBEDF"
        tools:src="@drawable/ic_face"
        android:id="@+id/image1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:textAppearanceLarge"
        tools:text="Image Name"
        android:id="@+id/text1"
        android:textColor="@color/colorAccent2"
        android:background="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_above="@+id/day_date_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/event_price"
        android:text="price"
        android:background="@color/colorAccent"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/day_date_time"
        android:text="schedule"
        android:background="#000000"
        android:textSize="15dp"
        android:textColor="@color/colorAccent2"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/image1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dates"
        android:textSize="15dp"
        android:background="#000000"
        android:textColor="@color/colorAccent2"
        android:textStyle="bold"
        android:id="@+id/num_dates"
        android:layout_alignBottom="@+id/day_date_time"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location"
        android:background="#000000"
        android:textColor="@color/colorAccent2"
        android:id="@+id/location"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/text1"
        android:layout_toRightOf="@+id/num_dates"
        android:layout_toEndOf="@+id/num_dates"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />
</RelativeLayout>