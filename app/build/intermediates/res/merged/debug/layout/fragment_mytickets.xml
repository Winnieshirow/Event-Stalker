<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEBEDF"
    tools:context="com.outer.fragments.drawer.MyticketsFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Event Title"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="20dp"
        android:id="@+id/EventTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ticket_type"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/ticket_type"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/EventTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="\@"
        android:id="@+id/textView6"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_alignTop="@+id/ticket_type"
        android:layout_toRightOf="@+id/ticket_type"
        android:layout_toEndOf="@+id/ticket_type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Amount per ticket"
        android:id="@+id/apt"
        android:layout_alignTop="@+id/textView6"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total price :"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView8"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/not"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/totalprice"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignRight="@+id/apt"
        android:textColor="@color/colorAccent"
        android:layout_alignEnd="@+id/apt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="numof tickets"
        android:id="@+id/not"
        android:layout_below="@+id/ticket_type"
        android:layout_toRightOf="@+id/ticket_type"
        android:layout_toEndOf="@+id/ticket_type"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="tickets"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/not"
        android:layout_toRightOf="@+id/not"
        android:layout_toEndOf="@+id/not" />

</RelativeLayout>
